# Configuration file for Raspberry Pi
del all

new preview broadcast
setup preview input v4l2:///dev/video0:width=1280:height=720:chroma=h264
setup preview option input-slave=alsa://hw:1,0
setup preview output #transcode{acodec=a52,ab=384,channels=2,samplerate=48000,audio-sync}:standard{access=http,mux=ts,dst=:8990/preview}
setup preview enabled

new recorder broadcast
setup recorder input v4l2:///dev/video0:width=1280:height=720:chroma=h264
setup recorder option input-slave=alsa://hw:1,0
setup recorder output #transcode{acodec=a52,ab=384,channels=2,samplerate=48000,audio-sync}:standard{access=file,mux=mp4,dst=./video/%Y-%m-%dT%H:%M:%SZ.mp4}
setup recorder enabled


# Load the schedule file
# ----------
load /home/capture/Camera/config/schedule

