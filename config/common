#!/bin/bash

function log {
   echo "$1"
}
function backup {
	if [ ! -z "$1" ]
	then
	  mv "$1" "$1.bak"
	fi
}
function include {
	if [ ! -z "$1" ]
	then
	  source $1
	fi
}


# ------------
# Read in the settings for this unit
# ------------
pathRoot=$(pwd)

# We need a machine configuration file.. at the very least
if [ ! -e "$pathRoot/config/machine" ] 
then
 cp $pathRoot/config/machine.default $pathRoot/config/machine
 log "Copied default machine setings..."
fi

source "$pathRoot/config/machine"


# ------------
# Common  for all scripts
# -----------

# Create a log file for whatever script is running
logFile="${0%/*}/log/${0##*/}.log"

# Local paths
pathLog="$pathRoot/log"
pathVideo="$pathRoot/video"
pathConfig="$pathRoot/config"



