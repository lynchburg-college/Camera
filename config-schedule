
# VLC media player VLM command batch
# http://www.videolan.org/vlc/

new streamer broadcast enabled
setup streamer input "v4l2:///dev/video0:width=1280:height=720:fps=30:chroma=h264"
setup streamer output #standard{access=http,mux=ts,dst=:8990/camera}
setup streamer option input-slave=alsa://hw:1,0
new recorder broadcast enabled
setup recorder input "v4l2:///dev/video0:height=480:fps=30:chroma=h264"
setup recorder output #transcode{acodec=mpga}:standard{access=file,mux=mp4,dst=./video/%Y-%m-%dT%H:%M:%SZ.mp4}
setup recorder option input-slave=alsa://hw:1,0
