del all

new camera broadcast
setup camera input v4l2:///dev/video0:width=800:height=448:fps:30:chroma=mjpg
setup camera option input-slave=alsa://hw:0,0
setup camera output #transcode{vcodec=mp4v,fps=30,vb=8192,scale=0,acodec=mpga,ab=256}:standard{access=http,mux=ts,dst=:8990/camera}
setup camera enabled
control camera play


# Recorder 
new recorder broadcast
setup recorder input http://127.0.0.1:8990/camera
setup recorder output #standard{access=file,mux=ps,dst=./video/%Y-%m-%dT%H:%M:%SZ.mp4}
setup recorder enabled


# Load the schedule file
# ----------
load /home/capture/Camera/config-schedule

